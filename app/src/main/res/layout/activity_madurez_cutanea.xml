<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bgLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Medical Pro"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contenido desplazable -->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Evaluación de Madurez Cutánea"
                        android:textColor="#115E73"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="Observación de la textura, grosor, transparencia y descamación de la piel del recién nacido."
                        android:textColor="#258997" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Título o Guía -->
                    <TextView
                        android:id="@+id/tvTitulotexturaPiel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Textura de la piel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#115E73"
                        android:layout_marginBottom="8dp" />

                    <!-- ComboBox (Spinner) -->
                    <Spinner
                        android:id="@+id/spinnerTexturaPiel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Título o Guía -->
                    <TextView
                        android:id="@+id/tvTituloGrosorPiel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grosor de la piel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#115E73"
                        android:layout_marginBottom="8dp" />

                    <!-- ComboBox (Spinner) -->
                    <Spinner
                        android:id="@+id/spinnerGrosorPiel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Título o Guía -->
                <TextView
                    android:id="@+id/tvTituloTransparenciaPiel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transparencia de la piel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#115E73"
                    android:layout_marginBottom="8dp" />

                <!-- ComboBox (Spinner) -->
                <Spinner
                    android:id="@+id/spinnerTransparenciaPiel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Título o Guía -->
                    <TextView
                        android:id="@+id/tvTituloDescamacionPiel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descamación de la piel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#115E73"
                        android:layout_marginBottom="8dp" />

                    <!-- ComboBox (Spinner) -->
                    <Spinner
                        android:id="@+id/spinnerDescamacionPiel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnEvaluarMadurezcutanea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Evaluar Madurez Cutánea"
                android:backgroundTint="@color/bgLogin"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>


    </ScrollView>



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#F3F4F6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_inicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F3F4F6"
            android:text="Inicio"
            android:textColor="@color/black"
            android:drawableTop="@drawable/home_svgrepo_com" />

        <Button
            android:id="@+id/btn_historial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F3F4F6"
            android:text="Historial"
            android:textColor="@color/black"
            android:drawableTop="@drawable/brain_illustration_4_svgrepo_com"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>